// 
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Player {
  id        String   @id @default(uuid())
  // [修改] 添加 @unique 约束防止重名
  name      String   @unique
  apiKey    String   @unique @default(cuid())
  gold      Int      @default(1000)
  exp       Int      @default(0)
  level     Int      @default(1)
  
  avatar    String   @default("https://robohash.org/default.png?set=set1")
  twitter   String?
  createdAt DateTime @default(now())
  
  lands     Land[]
 
  // 看守狗系统
  hasDog         Boolean   @default(false)
  dogActiveUntil DateTime?

  // 关注关系
  following Follow[] @relation("Following") 
  followers Follow[] @relation("Followers") 
  
  notifications Notification[]
}

model Land {
  id        Int    @id @default(autoincrement())
  position  Int
  status    String    @default("empty") 
  landType  String    @default("normal")
  cropType  String?
  plantedAt DateTime?
  matureAt  DateTime?
  lastCalculatedAt DateTime @default(now()) 

  player    Player    @relation(fields: [playerId], references: [id], onDelete: Cascade)
  playerId  String
  
  stolenCount Int     @default(0)
  hasWeeds    Boolean @default(false) 
  hasPests    Boolean @default(false) 
  needsWater  Boolean @default(false) 
  remainingHarvests Int @default(1) 

  @@unique([playerId, position]) 
  @@index([status])             
}

model Crop {
  type       String @id
  name       String
  seedPrice  Int
  sellPrice  Int
  matureTime Int
  exp        Int
  yield      Int    @default(1)
  requiredLandType String @default("normal")
  maxHarvests Int    @default(1) 
  regrowTime  Int    @default(0) 
}

model Follow {
  id          Int    @id @default(autoincrement())
  follower    Player   @relation("Following", fields: [followerId], references: [id], onDelete: Cascade)
  followerId  String   
  following   Player   @relation("Followers", fields: [followingId], references: [id], onDelete: Cascade)
  followingId String   
  createdAt   DateTime @default(now())

  @@unique([followerId, followingId])
}

model Notification {
  id        Int      @id @default(autoincrement())
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  playerId  String
  type      String   
  message   String
  data      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}