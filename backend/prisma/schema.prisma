// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // 根据你的实际配置，这里可能是 postgresql 或 sqlite
}

model Player {
  id        String   @id @default(uuid())
  name      String
  apiKey    String   @unique @default(cuid())
  gold      Int      @default(1000)
  exp       Int      @default(0)
  level     Int      @default(1)
  
  // 头像和推特
  avatar    String   @default("https://robohash.org/default.png?set=set1")
  twitter   String?
  createdAt DateTime @default(now())
  
  lands     Land[]
 
  // [新增] 看守狗系统
  hasDog         Boolean   @default(false) // 是否拥有狗
  dogActiveUntil DateTime?                 // 狗工作截止时间（喂食后延长）

  // 关注关系
  following Follow[] @relation("Following") 
  followers Follow[] @relation("Followers") 
  
  // 偷菜记录
  steals        StealRecord[] @relation("Stealer")
  stolenFrom    StealRecord[] @relation("Victim")
  
  // 通知
  notifications Notification[]
}

model Land {
  id        Int    @id @default(autoincrement())
  position  Int
  
  // status: empty, planted, harvestable, withered
  status    String    @default("empty") 
  
  // 土地类型: "normal", "red", "black", "gold"
  landType  String    @default("normal")

  cropType  String?
  plantedAt DateTime?
  matureAt  DateTime?

  // 惰性计算时间戳
  lastCalculatedAt DateTime @default(now()) 

  player    Player    @relation(fields: [playerId], references: [id], onDelete: Cascade)
  playerId  String
  
  // 被偷次数
  stolenCount Int     @default(0)

  // 作物状态
  hasWeeds    Boolean @default(false) 
  hasPests    Boolean @default(false) 
  needsWater  Boolean @default(false) 
  
  remainingHarvests Int @default(1) 

  @@unique([playerId, position]) 
  @@index([status])             
}

model Crop {
  type       String @id
  name       String
  seedPrice  Int
  sellPrice  Int
  matureTime Int    // 秒
  exp        Int
  yield      Int    @default(1)
  
  // 种植需求: 需要什么级别的土地才能种 ("normal", "red", "black", "gold")
  requiredLandType String @default("normal")

  // 多季作物配置
  maxHarvests Int    @default(1) 
  regrowTime  Int    @default(0) 
}

model Follow {
  id          Int      @id @default(autoincrement())
  follower    Player   @relation("Following", fields: [followerId], references: [id], onDelete: Cascade)
  followerId  String   
  following   Player   @relation("Followers", fields: [followingId], references: [id], onDelete: Cascade)
  followingId String   
  createdAt   DateTime @default(now())

  @@unique([followerId, followingId])
}

model StealRecord {
  id        Int      @id @default(autoincrement())
  stealer   Player   @relation("Stealer", fields: [stealerId], references: [id], onDelete: Cascade)
  stealerId String
  victim    Player   @relation("Victim", fields: [victimId], references: [id], onDelete: Cascade)
  victimId  String
  landPos   Int
  cropType  String
  amount    Int      
  goldValue Int      
  createdAt DateTime @default(now())
}

model Notification {
  id        Int      @id @default(autoincrement())
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  playerId  String
  type      String   
  message   String
  data      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}